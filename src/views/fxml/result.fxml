<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="pageTitle" layoutX="80.0" layoutY="11.0" prefHeight="96.0" prefWidth="258.0" text="Payment" textAlignment="CENTER" textFill="#5091e6">
         <font>
            <Font name="Segoe UI Semibold" size="42.0" />
         </font>
      </Label>
      <ImageView fitHeight="73.0" fitWidth="73.0" layoutX="14.0" layoutY="28.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../assets/images/Logo.png" />
         </image>
      </ImageView>
      <Label fx:id="resultLabel" layoutX="420.0" layoutY="249.0" text="PAYMENT RESULT!" textFill="#5091e6">
         <font>
            <Font name="Calibri Bold" size="72.0" />
         </font>
      </Label>
      <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="392.0" layoutY="506.0" prefHeight="62.0" prefWidth="620.0" text="Message" textFill="#5091e6" wrapText="true">
         <font>
            <Font name="Calibri" size="36.0" />
         </font>
      </Label>
      <Button fx:id="okButton" alignment="CENTER" contentDisplay="CENTER" layoutX="544.0" layoutY="676.0" mnemonicParsing="false" onMouseClicked="#confirmPayment" prefHeight="46.0" prefWidth="316.0" style="-fx-background-color: #5091e6;" text="OK" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="24.0" />
         </font>
      </Button>
      <Label fx:id="VNpayMessage" alignment="CENTER" contentDisplay="CENTER" layoutX="412.0" layoutY="330.0" prefHeight="107.0" prefWidth="580.0" text="Payment Pending, click to check result when done" textAlignment="CENTER" textFill="#5091e6" wrapText="true">
         <font>
            <Font name="Calibri" size="36.0" />
         </font>
      </Label>
      <Button fx:id="checkVNpay" alignment="CENTER" contentDisplay="CENTER" layoutX="604.0" layoutY="453.0" mnemonicParsing="false" onMouseClicked="#confirmPayment" prefHeight="31.0" prefWidth="196.0" style="-fx-background-color: #5091e6;" text="Check" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
